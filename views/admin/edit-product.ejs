<%- include('../layouts/header.ejs') %>
<div id="mainBody">
    <div class="container">
        <div class="row">
            <%- include('../layouts/adminSidebar.ejs') %>
            <div class="span9">
                <div class="well well-small">
                    <form class="product-form"
                        action="/admin/<% if (editing) { %>edit-product<% } else { %>add-product<% } %>" method="POST">
                        <div class="form-control">
                            <label for="title">Title</label>
                            <input type="text" name="title" id="title"
                                value="<% if (editing) { %><%= product.title %><% } %>">
                        </div>
                        <div class="form-control">
                            <label for="imageUrl">Image URL</label>
                            <input type="text" name="imageUrl" id="imageUrl"
                                value="<% if (editing) { %><%= product.imageUrl %><% } %>">
                        </div>
                        <div class="form-control">
                            <label for="price">Price</label>
                            <input type="number" name="price" id="price" step="0.01"
                                value="<% if (editing) { %><%= product.price %><% } %>">
                        </div>
                        <div class="form-control">
                            <label for="sale">Sale</label>
                            <input type="number" name="sale" id="sale" step="0.01"
                                value="<% if (editing) { %><%= product.sale %><% } %>">
                        </div>
                        <div class="form-control">
                            <label for="color">Color</label>
                            <input type="text" name="color" id="color"
                                value="<% if (editing) { %><%= product.color %><% } %>">
                        </div>
                        <div class="form-control">
                            <label for="color">Brand</label>
                            <input type="text" name="brand" id="brand"
                                value="<% if (editing) { %><%= product.brand %><% } %>">
                        </div>
                        <div class="form-control">
                            <label for="color">Model</label>
                            <input type="text" name="model" id="model"
                                value="<% if (editing) { %><%= product.model %><% } %>">
                        </div>
                        <div class="form-control">
                            <label for="shortDescription">Short description</label>
                            <textarea name="shortDescription" id="shortDescription"
                                rows="5"><% if (editing) { %><%= product.shortDescription %><% } %></textarea>
                        </div>
                        <div class="form-control">
                            <label for="fullDescription">Description</label>
                            <textarea name="fullDescription" id="fullDescription"
                                rows="5"><% if (editing) { %><%= product.fullDescription %><% } %></textarea>
                        </div>
                        <div class="form-control">
                            <label for="quantity">Quantity</label>
                            <input type="number" name="quantity" id="quantity" step="0.01"
                                value="<% if (editing) { %><%= product.quantity %><% } %>">
                        </div>
                        <% if (editing) { %>
                        <input type="hidden" value="<%= product.id %>" name="productId">
                        <% } %>

                        <button class="btn" type="submit"><% if (editing) { %>Update Product<% } else { %>Add
                            Product<% } %></button>
                    </form>
                </div>
                <h4>Latest Products </h4>


            </div>
        </div>
    </div>
</div>


<%- include('../layouts/footer.ejs') %>